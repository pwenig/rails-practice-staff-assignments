<% @person.errors.each do |attribute, message| %>
  <%= message %>
<% end %>

<h2>Edit</h2>

<%= form_for @person do |f| %>

  <div class="form-row">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, value: @person.title %>
  </div>

  <div class="form-row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value: @person.first_name %>
  </div>

  <div class="form-row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, value: @person.last_name %>
  </div>

  <div class="form-row">
    <%= f.submit  %>
  </div>

<% end %>